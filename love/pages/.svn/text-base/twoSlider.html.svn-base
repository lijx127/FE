<script type="text/javascript">
/*为每个信息框注册事件，鼠标滑过的时候浮出气泡*/
/*浮出气泡的过程中接收3个参数:renrenName(人人帐号名字，如：萨达姆), srTime（接受礼物或者发送礼物的时间）,sr(s是发送，s是接收)*/
/*点击事件，接收3个参数giftCat, renrenId, tgId*/
/*giftCat：礼物的类型，接收1、2、3如此的类型用于前台显示，默认是空*/
/*renrenId:发送ajax的时候用于取renrenId标识的人的通告*/
/*tgId：发送ajax的时候和renrenId一起使用，获取通告内容，并返回，js抓取通告内容用于前台显示，string类型即可*/

$(".srInfo").each(function(){
	$(this).bind("mouseover", function(){
		var container = $(this);
		var leftO = $(this).offset().left;
		var topO = $(this).offset().top;	
		var heigth = $(this).outerHeight();
		var width = $(this).outerWidth();
		var scrollLeft = $(this).scrollLeft();
		var scrollTop = $(this).scrollTop();
		topO = topO - $("#bubble").outerHeight(true);
		leftO = leftO - width/2;
		var renrenName = $(this).attr("renrenName") || "";
		var srTime = $(this).attr("srTime") || "";
		var sr = $(this).attr("sr") || "";
		var srInfo = "";
		if(sr == "s"){
			srInfo = "赠送给 " + renrenName + " <br />" + srTime;	
		}
		else if(sr == "r")
		{
			srInfo = renrenName + " 赠送于" + " <br />" + srTime;	
		}
		else
		{
			srInfo = "... ...信息获取中";
		}
		$("#bubble").find("p").html(srInfo);
		$("#bubble").removeClass("hideContainer");
		$("#bubble").offset({top:topO, left:leftO});
	
	}).bind("mouseout", function () {
		$("#bubble").addClass("hideContainer");
	}
	).bind("click", function(){
		var popS = '<div id="giftOverview" class="giftOverview"><img src="../resource/images/ajax-loader.gif" class="giftov_ajaxLoad"/><a class="giftovClose" href="javascript:;"></a></div>';
  	pop(popS);
		$(".giftovClose").click(function () {centerClose()});
		var renrenId = $(this).attr("renrenId");
		var tgId = $(this).attr("tgId");
		//判断礼物类型
		var giftCat = "";
		switch($(this).attr("giftCat")){
			case '1' :
					giftCat = '<div class="giftDis"><img src="../resource/images/tg_public.png" /></div>';
					break;
			case '2' :
					giftCat = '<div class="giftDis"><img src="../resource/images/tg_privateZ.png" /></div>';
					break;
			case '3' :
					giftCat = '<div class="giftDis"><img src="../resource/images/tg_privateS.png" /></div>';
					break;
				default:
					giftCat = "";
					break;
		};
		
		/*ajax接收发送内容*/
		$.ajax({
						 type: "POST",
						 data: "renrenId=" + renrenId +"&tgId=" + tgId, //传递renrenId和tgId
						 url: "http://localhost/Dev/PHP/tinyMCE/ccc/ccc.php",
						 success: function(msg){
							 //保存内容
							 var content = msg;
							 var innerContent = "<p>" + msg + '</p>' + giftCat + '<a class="giftovClose" href="javascript:;"></a>';
							$("#giftOverview").html(innerContent);
							$(".giftovClose").click(function () {centerClose()});
						 },
						 error : function(){
							errorControl(); 
						}
					 });
	});
});
	var errorControl = function (){
		var noticeCircle = pJ.selector.id('noticeCircle'); 
		setTimeout(function(){centerClose();},1000);
		setTimeout(function(){pop(noticeCircle); },2000);
		setTimeout(function(){location.replace(location.href);}, 3500);
	};

</script>
