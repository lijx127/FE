<script type="text/javascript">
$(".a_inviteList").each(function(){
	$(this).bind("click", function(){
		if(!$(this).hasClass("selected")) $(this).addClass("selected");
		else $(this).removeClass("selected");
	});	
});
$("a").attr("hidefocus", "true");

$("#selectAll").click(function(){
	$(".a_inviteList").parent().show();
	$(".a_inviteList").addClass("selected");
});
$("#cancel").click(function(){
	$(".a_inviteList").parent().show();
	$(".a_inviteList").removeClass("selected");
});

$("#fanxuan").click(function(){
	$(".a_inviteList").parent().show();
		$(".a_inviteList").each(function(){
			if($(this).hasClass("selected")){
				$(this).removeClass("selected");
			}
			else{
				$(this).addClass("selected");
			}
		});
});

$("#submit").click(function(){
	var renrenIdStr = "";
	$(".a_inviteList").each(function(){
		if($(this).hasClass("selected"))	renrenIdStr = renrenIdStr + $(this).attr("renrenId")+",";
	});
	
	if(renrenIdStr != null){
		var loc = renrenIdStr.lastIndexOf(',');
		renrenIdStr = renrenIdStr.substr(0, loc);
	}
	pJ.selector.id("ccc").value = renrenIdStr;
	if(renrenIdStr == "") 
	{
		var noticeCircle = pJ.selector.id("noticeCircle");
		var ltClose = pJ.selector.id("ltClose");
		pop(noticeCircle);
		ltClose.onclick = function(){centerClose();};
		return;
	}
	$("#cc").submit();
	
});
</script>
<script type="text/javascript">
/*
*功能：筛选好友
*依赖：pJ.selector
*
*/
/**********************************************************************************/
/*筛选事件*/
var search_tip = "输入好友姓名进行筛选";
$("#friendsChoose").val(search_tip);
$("#friendsChooseValue").val("");
$("#friendsChoose").focus(
	function(){if($(this).val().toString()==search_tip){$(this).val("")}
	$(".a_inviteList").removeClass("selected");
	
	
	$(this).bind("keyup",function(e){
		var q=$(this).attr("value");
		if(q==="")
		{
			$('.a_inviteList').parent().show();return
		}
		$(".name_inviteList").each(
			function()
			{
				var html=$(this).html();
				if(html.indexOf(q)>=0)
				{
					$(this).parent().parent().show();
				}
				else
				{
					$(this).parent().parent().hide();
				}
			});//each End
	}); //bind End
});//focus End
$("#friendsChoose").blur(function(){if($(this).val().toString()==""){$(this).val(search_tip);$(".name_inviteList").each(function(){$(this).parent().parent().show();})}$(this).unbind("keyup")});
var conFriendChoose="";

</script>
